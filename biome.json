{
	"$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"files": {
		"includes": [
			"**",
			"!!packages/**/.svelte-kit",
			"!!packages/**/build",
			"!!node_modules",
			"!!docs",
			"!!**/*.svelte",
			"!!**/*.js"
		]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noAssignInExpressions": "off"
			},
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			},
			"style": {
				"noParameterAssign": "off",
				"useExportType": "error"
			}
		}
	}
}
