{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"ignore": ["**/*.svelte"],
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "off"
			},
			"suspicious": {
				"noAssignInExpressions": "off"
			},
			"style": {
				"noParameterAssign": "off",
				"useConst": "off"
			}
		}
	}
}
